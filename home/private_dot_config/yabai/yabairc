sudo yabai --load-sa
osascript -e 'tell application id "tracesOf.Uebersicht" to refresh' 

# global settings
yabai -m config window_placement        second_child
yabai -m config window_shadow           on
yabai -m config window_opacity          on
yabai -m config active_window_opacity   1.0
yabai -m config normal_window_opacity   0.9
yabai -m config mouse_follows_focus     on

# space settings
yabai -m config layout                  bsp
yabai -m config top_padding             8
yabai -m config bottom_padding          8
yabai -m config left_padding            8
yabai -m config right_padding           8
yabai -m config window_gap              8
yabai -m config external_bar            all:38:0

# signals
yabai -m signal --add event=dock_did_restart \
	action="sudo yabai --load-sa"
yabai -m signal --add event=display_added \
	action="~/.config/yabai/yabairc.fix_display"
yabai -m signal --add event=display_removed \
	action="~/.config/yabai/yabairc.fix_display"

# space 1: Misc
yabai -m config --space 1 layout stack
yabai -m rule --add app="^Obsidian$" space=^1
yabai -m rule --add app="^Bear$" space=^1
yabai -m rule --add app="^Spotify$" space=^1

# space 2: Terminals
yabai -m rule --add app="^iTerm2$" space=^2
yabai -m rule --add app="^Ghostty$" space=^2

# space 3: Communication
yabai -m config --space 3 layout stack
yabai -m rule --add app="^Microsoft Teams$" space=^3
yabai -m rule --add app="^Microsoft Outlook$" space=^3

# space 4: Code
yabai -m rule --add app="^Code$" space=^4

# space 5: Browser
yabai -m rule --add app="^Safari$" space=^5
yabai -m rule --add app="^Firefox$" space=^5

# unmanaged apps
yabai -m rule --add app="^Bitwarden$" manage=off
yabai -m rule --add app=" Settings$" manage=off
yabai -m rule --add app=" Preferences$" manage=off
