packages=(
    "bat"
    "btop"
    "eza"
    "fd"
    "fzf"
    "git-delta"
    "lazygit"
    "ripgrep"
    "starship"
    "tlrc"
    "yazi"
    "zoxide"
)

{{ .brew_path }} install "${packages[@]}"
